<Window
    x:Class="ElevateDb.Desktop.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ElevateDb.Desktop"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:ElevateDb.Desktop.ViewModels"
    xmlns:views="clr-namespace:ElevateDb.Desktop.Views"
    Title="MainWindow"
    Width="800"
    Height="450"
    d:DataContext="{d:DesignInstance viewModels:MainViewModel,
                                     IsDesignTimeCreatable=False}"
    mc:Ignorable="d">
    <Grid>
        <TabControl>
            <TabItem Header="ElevateDB tests">
                <views:ElevateDbTestView DataContext="{Binding ElevateDbTestViewModel}" />
            </TabItem>
        </TabControl>
    </Grid>
</Window>
