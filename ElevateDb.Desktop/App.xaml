<Application
    x:Class="ElevateDb.Desktop.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:ElevateDb.Desktop">
    <Application.Resources>
        <Style x:Key="SeparatorRowStyle" TargetType="RowDefinition">
            <Setter Property="Height" Value="5" />
        </Style>
        <Style x:Key="SeparatorColumnStyle" TargetType="ColumnDefinition">
            <Setter Property="Width" Value="5" />
        </Style>
        <Style TargetType="Label">
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="MinWidth" Value="200" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="MinWidth" Value="150" />
            <Setter Property="Margin" Value="5" />
        </Style>
        <Style
            x:Key="ApplyAndTestDbConnectionButton"
            BasedOn="{StaticResource ActionButton}"
            TargetType="Button">
            <Setter Property="MinWidth" Value="200" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Top" />
        </Style>
    </Application.Resources>
</Application>
